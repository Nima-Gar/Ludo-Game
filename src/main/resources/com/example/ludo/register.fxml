<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #6A5ACD;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ludo.Register">
   <children>
      <Label layoutX="95.0" layoutY="118.0" text="Welcome to the Registration Part for The Ludo Game" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="30.0" />
         </font>
      </Label>
      <TextField fx:id="usernameInp" layoutX="403.0" layoutY="336.0" prefHeight="30.0" prefWidth="212.0">
         <font>
            <Font name="System Italic" size="13.0" />
         </font>
      </TextField>
      <Label layoutX="265.0" layoutY="335.0" text="Username :" textFill="WHITE">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <Label layoutX="265.0" layoutY="271.0" text="Fill the Blanks to make your account" textFill="#e5ff1d">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <Label layoutX="267.0" layoutY="406.0" text="Password :" textFill="WHITE">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <Button fx:id="registerBtn" layoutX="632.0" layoutY="553.0" mnemonicParsing="false" onAction="#onRegister" opacity="0.88" prefHeight="50.0" prefWidth="106.0" style="-fx-background-color: #008B8B;" text="Register" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
      </Button>
      <Label fx:id="usernameAlert" layoutX="647.0" layoutY="336.0" textFill="#02ffff">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <Label fx:id="passwordAlert" layoutX="647.0" layoutY="406.0" textFill="#02ffff">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <Button fx:id="menuBtn" layoutX="158.0" layoutY="549.0" mnemonicParsing="false" onAction="#onMenu" opacity="0.88" prefHeight="50.0" prefWidth="106.0" style="-fx-background-color: crimson;" text="Menu" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="16.0" />
         </font>
      </Button>
      <Label fx:id="successMessage" layoutX="267.0" layoutY="478.0" textFill="#02ffff">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordInp" layoutX="403.0" layoutY="408.0" prefHeight="30.0" prefWidth="212.0" promptText="at least 6 characters">
         <font>
            <Font name="System Italic" size="13.0" />
         </font>
      </PasswordField>
   </children>
</AnchorPane>
