<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #008B8B;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ludo.Login">
    <children>
        <Label layoutX="148.0" layoutY="119.0" text="Welcome to the Login page of Ludo Game" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="32.0" />
            </font>
        </Label>
        <TextField fx:id="usernameInp" layoutX="418.0" layoutY="332.0" prefHeight="30.0" prefWidth="212.0">
            <font>
                <Font name="System Italic" size="13.0" />
            </font>
        </TextField>
        <Label layoutX="280.0" layoutY="331.0" text="Username :" textFill="WHITE">
            <font>
                <Font name="System Italic" size="20.0" />
            </font>
        </Label>
        <Label layoutX="280.0" layoutY="272.0" text="Fill the Blanks to log into your account" textFill="#e5ff1d">
            <font>
                <Font name="System Italic" size="20.0" />
            </font>
        </Label>
        <Label layoutX="282.0" layoutY="403.0" text="Password :" textFill="WHITE">
            <font>
                <Font name="System Italic" size="20.0" />
            </font>
        </Label>
        <Button fx:id="registerBtn" layoutX="647.0" layoutY="554.0" mnemonicParsing="false" onAction="#onSubmit" opacity="0.88" prefHeight="50.0" prefWidth="106.0" style="-fx-background-color: #00CED1;" text="Submit" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="15.0" />
            </font>
        </Button>
        <Label fx:id="alertMessage" layoutX="308.0" layoutY="504.0" textFill="#02ffff">
            <font>
                <Font name="System Italic" size="20.0" />
            </font>
        </Label>
        <Button fx:id="menuBtn" layoutX="173.0" layoutY="550.0" mnemonicParsing="false" onAction="#onMenu" opacity="0.88" prefHeight="50.0" prefWidth="106.0" style="-fx-background-color: crimson;" text="Menu" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="16.0" />
            </font>
        </Button>
      <PasswordField fx:id="passwordInp" layoutX="418.0" layoutY="403.0" prefHeight="30.0" prefWidth="212.0">
         <font>
            <Font name="System Italic" size="13.0" />
         </font></PasswordField>
    </children>
</AnchorPane>
